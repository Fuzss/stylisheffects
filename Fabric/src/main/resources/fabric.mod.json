{
  "schemaVersion": 1,
  "id": "${modId}",
  "version": "${modVersion}",

  "name": "${modName}",
  "description": "${modDescription}",
  "authors": [
    "${modAuthor}"
  ],
  "contact": {
    "homepage": "${modPageUrl}",
    "issues": "${modIssueUrl}",
    "sources": "${modPageUrl}"
  },

  "license": "MPL-2",
  "icon": "mod_logo.png",

  "environment": "${modFabricEnvironment}",
  "entrypoints": {
    "main": [
      "${mainEntryPoint}"
    ],
    "client": [
      "${clientEntryPoint}"
    ],
    "jei_mod_plugin": [
      "${modGroup}.compat.jei.StylishEffectsJeiPlugin"
    ],
    "rei_client": [
      "${modGroup}.compat.rei.StylishEffectsReiPlugin"
    ]
  },
  "mixins": [
    "${modId}.common.mixins.json",
    "${modId}.fabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${minFabricVersion}",
    "fabric-api": ">=${minFabricApiVersion}",
    "puzzleslib": ">=${minPuzzlesVersion}",
    "minecraft": ">=${minMinecraftVersion} <${nextMinecraftVersion}",
    "java": ">=17"
  }
}
